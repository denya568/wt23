<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_newsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorSiteBlue"
                android:gravity="center"
                android:text="Denya pidor"
                android:textColor="@color/colorWhite"
                android:textSize="23sp" />

            <cn.jzvd.JZVideoPlayerStandard
                android:id="@+id/jzPlayer"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <com.jaedongchicken.ytplayer.YoutubePlayerView
                android:id="@+id/ytPlayer"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <TextView
                android:id="@+id/tv_newsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="start"
                android:text="jkdfsghdfskjgh jkhdfg"
                android:textColor="@color/colorBlack" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="4dp"
                android:background="@color/colorBlack" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_newsShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/ic_share_black_24dp" />

                <TextView
                    android:id="@+id/tv_newsComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_mode_comment_black_24dp"
                    android:paddingStart="4dp"
                    android:paddingTop="1dp"
                    android:gravity="center|top"
                    android:paddingEnd="4dp"
                    android:text="10k"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_newsDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:text="20.04.2018"
            android:textColor="@color/colorGray"
            android:textSize="13sp" />

    </android.support.v7.widget.CardView>

</LinearLayout>