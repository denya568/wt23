<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/magazineLay"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeMagaz"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_magazine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

        </android.support.v4.widget.SwipeRefreshLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/shopFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/ic_local_grocery_store_black_24dp"
            android:tint="@color/colorBlack"
            app:backgroundTint="@color/colorSiteWhiteBlue"
            app:fabSize="normal"
            app:rippleColor="@color/colorSiteYolo"
            app:useCompatPadding="true" />

        <TextView
            android:id="@+id/tvFab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|end"
            android:layout_gravity="end|bottom"
            android:background="@color/prizrak1"
            android:textColor="@color/blackw"
            android:textSize="13sp" />

    </FrameLayout>

</LinearLayout>