<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/accLay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|top"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeMyAcc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarThumbVertical="@drawable/round_button_yolo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/round_et"
                        android:gravity="center"
                        android:padding="8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="200">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="80"
                                android:gravity="start"
                                android:text="@string/rank"
                                android:textColor="#000000"
                                android:textSize="17sp"
                                android:typeface="monospace" />

                            <TextView
                                android:id="@+id/karma"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="5dp"
                                android:layout_weight="120"
                                android:gravity="end"
                                android:textColor="@color/colorSiteBlue"
                                android:textSize="19sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorBlack"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="200">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="80"
                                android:gravity="start"
                                android:text="@string/battles_count"
                                android:textColor="@color/colorBlack"
                                android:textSize="17sp"
                                android:typeface="monospace" />

                            <TextView
                                android:id="@+id/battles"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="5dp"
                                android:layout_weight="120"
                                android:gravity="end"
                                android:textColor="@color/colorBlack"
                                android:textSize="19sp" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorBlack"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:orientation="horizontal"
                            android:weightSum="200">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="80"
                                android:gravity="start"
                                android:text="@string/number_of_wins"
                                android:textColor="#000000"
                                android:textSize="17sp"
                                android:typeface="monospace" />

                            <TextView
                                android:id="@+id/wins"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="5dp"
                                android:layout_weight="120"
                                android:gravity="end"
                                android:textColor="@color/colorBlack"
                                android:textSize="19sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorBlack"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:orientation="horizontal"
                            android:weightSum="200">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="80"
                                android:gravity="start"
                                android:text="@string/number_of_losses"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:typeface="monospace" />

                            <TextView
                                android:id="@+id/fails"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="5dp"
                                android:layout_weight="120"
                                android:gravity="end"
                                android:textColor="@color/colorSiteRed"
                                android:textSize="19sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="23dp"
                        android:layout_marginRight="23dp"
                        android:background="@color/colorBlack"
                        android:orientation="vertical" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/select_directions"
                        android:textColor="@color/colorSiteYolo"
                        android:textSize="17sp"
                        android:typeface="monospace" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="vertical"
                        android:paddingStart="25dp"
                        android:paddingLeft="25dp">

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/cbBreak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/break_dance"
                            android:textColor="@color/colorSiteGreen" />

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/cbTrick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tricking"
                            android:textColor="@color/colorSiteWhiteBlue" />

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/cbTramp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/trampoline"
                            android:textColor="@color/colorSiteBlue" />

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/cbPark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/parkour"
                            android:textColor="@color/colorSiteRed" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="23dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="23dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/colorBlack"
                        android:orientation="vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="200">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="130"
                            android:text="@string/login"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:typeface="monospace" />

                        <EditText
                            android:id="@+id/mylogin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="70"
                            android:background="@drawable/round_et"
                            android:editable="false"
                            android:inputType="none"
                            android:maxLines="2"
                            android:textColor="@color/colorSiteBlue"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="200">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="130"
                            android:text="@string/password"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"
                            android:typeface="monospace" />

                        <EditText
                            android:id="@+id/myPass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="70"
                            android:background="@drawable/round_et"
                            android:inputType="textPassword"
                            android:maxLines="2"
                            android:textColor="@color/colorSiteBlue"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="200">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="130"
                            android:text="@string/name"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"
                            android:typeface="monospace" />

                        <EditText
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="70"
                            android:background="@drawable/round_et"
                            android:maxLines="2"
                            android:textColor="@color/colorSiteBlue"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="200">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="130"
                            android:text="@string/surname"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"
                            android:typeface="monospace" />

                        <EditText
                            android:id="@+id/secondName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="70"
                            android:background="@drawable/round_et"
                            android:maxLines="2"
                            android:textColor="@color/colorSiteBlue"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="200">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="130"
                            android:text="@string/patronymic"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"
                            android:typeface="monospace" />

                        <EditText
                            android:id="@+id/patronymic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="70"
                            android:background="@drawable/round_et"
                            android:maxLines="2"
                            android:textColor="@color/colorSiteBlue"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="200">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="130"
                            android:text="@string/email"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"
                            android:typeface="monospace" />

                        <EditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="70"
                            android:background="@drawable/round_et"
                            android:inputType="textEmailAddress"
                            android:maxLines="2"
                            android:textColor="@color/colorSiteBlue"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="200">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="130"
                            android:text="@string/birthday"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"
                            android:typeface="monospace" />

                        <DatePicker
                            android:id="@+id/dp_birthday"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="70"
                            android:calendarViewShown="false"
                            android:datePickerMode="spinner" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="200">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="130"
                            android:text="@string/instagram"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"
                            android:typeface="monospace" />

                        <EditText
                            android:id="@+id/instagram"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="70"
                            android:background="@drawable/round_et"
                            android:maxLines="2"
                            android:textColor="@color/colorSiteBlue"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="200">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="130"
                            android:text="@string/about_oneself"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"
                            android:typeface="monospace" />

                        <EditText
                            android:id="@+id/aboutmyself"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="70"
                            android:background="@drawable/round_et"
                            android:maxLines="5"
                            android:textColor="@color/colorSiteBlue"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="40"
                            android:gravity="start"
                            android:text="@string/registration_date"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"
                            android:typeface="monospace" />

                        <TextView
                            android:id="@+id/regDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="60"
                            android:gravity="end"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <info.hoang8f.widget.FButton
                        android:id="@+id/saveChanges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/Save_settings"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>